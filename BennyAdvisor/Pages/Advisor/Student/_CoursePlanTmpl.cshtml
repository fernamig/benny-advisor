<script id="coursePlanTmpl" type="text/x-jsrender">
    {{*
        initTermCardLayout(data);
    }}
    <div class="card mb-2 text-white bg-{{:bgClass}}">
        <h5 class="card-header">
            <i class="fas fa-angle-up toggle-summary" onclick="$(parentNode.parentNode).toggleClass('show-summary')"></i>
            {{:termTitle}}
            &nbsp;<small>
            (
                {{if termGpa }}
                    GPA: {{:termGpa}},
                {{/if}}
                Credit:  {{:termCredit}}, Courses: {{:courses.length}}
            )
            </small>
        </h5>
        <div id="coursePlanTerm{{:termCode}}" class="container data-entry">
            <div class="row bg-card font-weight-bold card-header px-0">
                <div class="col-2">
                    Status
                </div>
                <div class="col-6">
                    Course
                </div>
                <div class="col-2 text-center">
                    Grade
                </div>
                <div class="col-2 text-center">
                    Credits
                </div>
            </div>
            {{for courses tmpl="#coursePlanEntryTmpl" /}}
        </div>
    </div>
</script>

<script id="coursePlanEntryTmpl" type="text/x-jsrender">
    <div class="row bg-card">
        <div class="col-2">
            {{if status === 4 }}
                Completed
            {{else status === 3}}
                Planned
            {{else status === 2}}
                In Progress
            {{else}}
                Not Completed
            {{/if}}
        </div>
        <div class="col-6">
            {{:code}} {{:title}}
        </div>
        <div class="col-2 text-center">
            {{if status === 4 }}
                {{:grade}}
            {{/if}}
        </div>
        <div class="col-2 text-center">
            {{:credit}}
        </div>
    </div>
</script>
