@page "/Advisor/{advisorId}/MyProfile/Schedule"
@{
    var advisorId = ViewContext.RouteData.Values["advisorId"];
}

<div id="spinner">
    <partial name="_Spinner" />
</div>
<div id="container" class="d-none">
    <div class="alert alert-secondary">
        <h5 class="alert-header">Set Hours of Availability</h5>
        <hr />
        <div class="container">
            <div class="row">
                <partial name="_ScheduleDayHeader" model="@("Monday")" />
                <partial name="_ScheduleDayHeader" model="@("Tuesday")" />
                <partial name="_ScheduleDayHeader" model="@("Wednesday")" />
                <partial name="_ScheduleDayHeader" model="@("Thursday")" />
                <partial name="_ScheduleDayHeader" model="@("Friday")" />
            </div>
            <div class="row mh-100">
                <partial name="_ScheduleDay" model="@("Monday")" />
                <partial name="_ScheduleDay" model="@("Tuesday")" />
                <partial name="_ScheduleDay" model="@("Wednesday")" />
                <partial name="_ScheduleDay" model="@("Thursday")" />
                <partial name="_ScheduleDay" model="@("Friday")" />
            </div>
        </div>
    </div>

    <div class="alert alert-secondary">
        <h5 class="alert-header">Set Scheduling Limits</h5>
        <hr />
        <div class="container">
            <div class="row">
                <div class="col-7 text-uppercase small">
                    Do not allow appointments to be scheduled fewer than
                </div>
                <div class="col-5 text-uppercase small">
                    Schedule appointment length of <b><output class="h6">30</output></b> minutes
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-7">
                    <div class="row">
                        <div class="col-3">
                            <input id="minHours" type="number" min="0" max="100" class="form-control" />
                        </div>
                        <div class="col-6 pl-0">
                            <span class="lh-24">hours in the future</span>
                        </div>
                    </div>
                </div>
                <div class="col-5">
                    <input id="sliderApptLen" type="text"
                           data-provide="slider"
                           data-slider-min="10"
                           data-slider-max="60"
                           data-slider-step="5"
                           data-slider-value="30"
                           data-slider-ticks="[10, 20, 30, 40, 50, 60]"
                           data-slider-ticks-labels="[10, 20, 30, 40, 50, 60]"
                           data-slider-tooltip="hide" />
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-7 text-uppercase small">
                    Do not allow appointments to be scheduled more than
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-7">
                    <div class="row">
                        <div class="col-3">
                            <input id="maxDays" type="number" min="0" max="365" class="form-control" />
                        </div>
                        <div class="col-6 pl-0">
                            <span class="lh-24">days in the future</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row mt-2">
            <div class="col-4 offset-8">
                <button type="button" class="btn btn-primary float-right" onclick="schedulerSendUpdate()">Save Limits</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/bootstrap-slider/bootstrap-slider.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap-slider/css/bootstrap-slider.css" />

    <script>
        gAdvisorId = '@advisorId';
function schedulerSaveDay(day) {
    schedulerSetDay(day);
    schedulerSendUpdate();
}

function schedulerSetDay(day) {
    var val = $("#" + day + " > textarea").val();
    var parts = val.split(",");
    var text = [];
    var badges = [];
    parts.forEach(function (el) {
        var range = el.split("-");
        if (range.length === 2) {
            var start = moment(range[0], ['h:m a', 'h:ma', 'ha']).format('h:mma');
            var end = moment(range[1], ['h:m a', 'h:ma', 'ha']).format('h:mma');
            text.push(start + "-" + end);
            badges.push(
                '<span class="badge badge-warning">'
                + start + " - " + end +
                '</span>');
        }
    });

    $("#" + day + " > textarea").val(text.join(", "));
    $("#" + day + " > div").html(badges.join(" "));
}

function schedulerSendUpdate() {
    var data = {
        limits: {
            minHours: $("#minHours").val(),
            maxDays: $("#maxDays").val(),
            appointmentLength: $("output").text()
        },
        availability: {
            monday: $("#dayMonday > textarea").val(),
            tuesday: $("#dayTuesday > textarea").val(),
            wednesday: $("#dayWednesday > textarea").val(),
            thursday: $("#dayThursday > textarea").val(),
            friday: $("#dayFriday > textarea").val()
        }
    };
    $.ajax({
        type: "POST",
        url: "/api/ajax/SetMyProfileScheduler/" + gAdvisorId,
        data: JSON.stringify(data),
        contentType: "application/json; charset=utf-8",
        dataType: "json"
    })
    .fail(function(xhr, status, error) {
        alert("Request Failed: " + status + ", " + error);
    });
}


    var slider = $("#sliderApptLen").slider()
        .on("slideStop", function(e) {
            $("output").text(e.value);
        })
        .data('slider');

    $.get("/api/ajax/GetMyProfileScheduler/" + gAdvisorId)
    .done(function(data) {
        $("#dayMonday > textarea").val(data.availability.monday);
        schedulerSetDay("dayMonday");
        $("#dayTuesday > textarea").val(data.availability.tuesday);
        schedulerSetDay("dayTuesday");
        $("#dayWednesday > textarea").val(data.availability.wednesday);
        schedulerSetDay("dayWednesday");
        $("#dayThursday > textarea").val(data.availability.thursday);
        schedulerSetDay("dayThursday");
        $("#dayFriday > textarea").val(data.availability.friday);
        schedulerSetDay("dayFriday");

        $("#minHours").val(data.limits.minHours);
        $("#maxDays").val(data.limits.maxDays);
        $("output").val(data.limits.appointmentLength);
        slider.setValue(data.limits.appointmentLength);

        $("#spinner").addClass("d-none");
        $("#container").removeClass("d-none");
        slider.refresh({ useCurrentValue: true });
    })
    .fail(function(xhr, status, error) {
        alert("Request Failed: " + status + ", " + error);
    });
    </script>
}
